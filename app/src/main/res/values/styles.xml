<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="windowActionBar">true</item>-->
<!--        <item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="DatePickerTheme" parent="Base.V21.Theme.AppCompat.Light.Dialog">
        <!-- this is new -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="colorAccent">@color/app_blue_color</item>
        <item name="android:headerBackground">@color/app_blue_color</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/app_blue_color</item>
        <item name="android:windowBackground">@null</item>
        <!--<item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>-->
    </style>

    <style name="RechargeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black_text_color</item>
        <!--<item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="hotelRatingBar" parent="@android:style/Widget.RatingBar">
        <!--<item name="android:progressDrawable">@drawable/hotel_rating_bar</item>-->
        <item name="android:progressDrawable">@drawable/hotel_rating_bar</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="Theme.AepsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue_color</item>
        <item name="colorPrimaryVariant">@color/darkBlueColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue_color</item>
        <item name="colorSecondaryVariant">@color/darkBlueColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Aeps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue_color</item>
        <item name="colorPrimaryVariant">@color/darkBlueColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue_color</item>
        <item name="colorSecondaryVariant">@color/darkBlueColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>
    
    <style name="CustomEdittextTheme">
        <item name="android:textSelectHandle">@drawable/zero_px</item>
        <item name="android:textSelectHandleLeft">@drawable/zero_px</item>
        <item name="android:textSelectHandleRight">@drawable/zero_px</item>
    </style>
        

</resources>
