<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:paddingTop="@dimen/pageTopPadding"
    >

    <include
        android:id="@+id/topRel"
        layout="@layout/flight_avail_top_layout"/>

    <LinearLayout
        android:id="@+id/sortingLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/sortingBackgroundColorFlight"
        android:layout_below="@id/topRel">

        <LinearLayout
            android:id="@+id/deptLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_dep_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/deptArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:rotation="-90"
                    android:visibility="invisible"/>
            </LinearLayout>
            <View
                android:id="@+id/deptView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_arr_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Arrival"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/arrArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward_flight"
                    android:rotation="-90"/>
            </LinearLayout>
            <View
                android:id="@+id/arrView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/durationLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_dur_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/durationArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:visibility="invisible"
                    android:rotation="-90"/>
            </LinearLayout>
            <View
                android:id="@+id/durationView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="invisible"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_price_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/priceArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:rotation="-90"/>
            </LinearLayout>

            <View
                android:id="@+id/priceView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/sortingLin"
        android:layout_above="@+id/bottomLin">

        <LinearLayout
            android:id="@+id/outBoundLin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/very_small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/outBoundCityCodeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Del - Bom"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/small_text_size"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/outboundDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/grayColorFlight"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGrayColorFlight"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOutBound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_lin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGrayColorFlight"
                />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/black_text_color"
            />

        <LinearLayout
            android:id="@+id/inBoundLin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/very_small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inBoundCityCodeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Del - Bom"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/small_text_size"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/inBoundDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/grayColorFlight"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/darkGrayColorFlight"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInBound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_lin" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/darkGrayColorFlight"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorWhite"
            >
            <LinearLayout
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:textSize="@dimen/small_text_size10sp"
                    android:textColor="@color/grayColorFlight"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/departurePriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/app_blue_color"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/size_1dp"
                android:layout_height="@dimen/size_15dp"
                android:background="@color/grayViewColorFlight"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="@dimen/size_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return"
                    android:textSize="@dimen/small_text_size10sp"
                    android:textColor="@color/grayColorFlight"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/returnPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/app_blue_color"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:id="@+id/totalPriceTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/app_blue_color"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bookTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BOOK"
                android:layout_margin="@dimen/small_margin"
                android:paddingTop="@dimen/small_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin"
                android:background="@drawable/new_button_gradient_background"
                android:textSize="@dimen/text_size_13sp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>