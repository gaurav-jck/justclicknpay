<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLin"
    android:paddingTop="@dimen/small_margin"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/small_margin">
    <LinearLayout
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/airlineImg"
            android:layout_width="@dimen/flightDomesticAirlineIconSize"
            android:layout_height="@dimen/flightDomesticAirlineIconSize"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/airlineCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textSize="@dimen/small_text_size10sp"
            android:layout_gravity="left"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/priceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fare"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/app_blue_color"/>
        <TextView
            android:id="@+id/refundTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refundable"
            android:layout_gravity="right"
            android:paddingTop="@dimen/margin_2dp"
            android:textSize="@dimen/small_text_size10sp"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_2dp"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">
        <TextView
            android:id="@+id/deptTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/small_text_size"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/arrTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:gravity="right"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/small_text_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <View
            android:id="@+id/timeLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/grayLightColorFlight"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_toRightOf="@+id/deptTimeTv"
            android:layout_toLeftOf="@+id/arrTimeTv"
            android:layout_below="@+id/durationTv"
            />

        <TextView
            android:id="@+id/durationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00h00m"
            android:gravity="right"
            android:textColor="@color/grayTextColorFlight"
            android:textSize="@dimen/small_text_size11sp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/stopsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Stop"
            android:textColor="@color/grayTextColorFlight"
            android:textSize="@dimen/small_text_size11sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/timeLine"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/grayViewColorFlight"
        android:layout_marginTop="@dimen/small_margin"
        />

</LinearLayout>