<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/recRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/hotelBackgroundColor"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin"
        android:visibility="visible">

        <TextView
            android:id="@+id/recipientTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/arrowImg"
            android:paddingLeft="@dimen/small_margin"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="@dimen/simple_content_text_size" />


        <ImageView
            android:id="@+id/arrowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/very_small_margin"
            app:srcCompat="@drawable/down_arrow" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/viewLinear"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
    android:background="@color/listItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipientLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recipient"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/recipientTv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/medium_margin"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Account No"
            android:fontFamily="@font/klinic_slab_medium"/>
        <TextView
            android:id="@+id/accountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:fontFamily="@font/museo_regular"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mobileLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Mobile"
            android:fontFamily="@font/klinic_slab_medium"/>
        <TextView
            android:id="@+id/mobileTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:fontFamily="@font/museo_regular"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bankLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/klinic_slab_medium"
            android:text="Bank Name"/>
        <TextView
            android:id="@+id/bankNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:fontFamily="@font/museo_regular"
            android:layout_weight="1.8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ifscLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp"
            android:fontFamily="@font/klinic_slab_medium"
            android:text="IFSC code"/>
        <TextView
            android:id="@+id/ifscTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:fontFamily="@font/museo_regular"
            android:layout_weight="1"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_7dp"
            android:layout_marginBottom="@dimen/medium_margin"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/benVerifyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/medium_margin"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_blue_color"
                    android:fontFamily="@font/museo_regular"
                    android:text="Not verified"/>
                <ImageView
                    android:id="@+id/imageVerify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/check_box_cross"
                    android:layout_toRightOf="@+id/benVerifyTv"/>

                <TextView
                    android:id="@+id/validateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Validate "
                    android:textColor="@color/white"
                    android:padding="@dimen/very_small_margin"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:background="@color/green_color"
                    android:fontFamily="@font/museo_regular"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/accVerifyTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="right"
                android:textColor="@color/color_white"
                android:background="@drawable/blue_rect_button_background"
                android:paddingTop="@dimen/very_small_margin"
                android:paddingBottom="@dimen/very_small_margin"
                android:paddingLeft="@dimen/large_margin"
                android:paddingRight="@dimen/large_margin"
                android:visibility="gone"
                android:text="Validate Account"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:gravity="center"
        android:paddingBottom="@dimen/small_margin"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/deleteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@drawable/red_rectangle_button_background"
            android:paddingTop="@dimen/very_small_margin"
            android:paddingBottom="@dimen/very_small_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin"
            android:fontFamily="@font/raleway_semi_bold"
            android:text="Delete"/>

        <TextView
            android:id="@+id/payNowTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:layout_marginLeft="@dimen/very_large_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@drawable/green_round_button_background"
            android:paddingTop="@dimen/very_small_margin"
            android:paddingBottom="@dimen/very_small_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin"
            android:fontFamily="@font/raleway_semi_bold"
            android:text="   Pay   "/>


    </LinearLayout>


</LinearLayout>
    </LinearLayout>