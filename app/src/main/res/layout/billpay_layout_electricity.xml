<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/fragment_billpay"
    android:padding="@dimen/medium_margin"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner_electricity_operator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        >
    </Spinner>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_light_black"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userIdInputElectricity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin">
        <EditText
            android:id="@+id/userIdEdtElectricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="@color/black_text_color"
            android:textColorHint="@color/grayTextHintColorFlight"
            android:singleLine="true"
            android:textSize="@dimen/simple_content_text_size"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userIdInput2Electricity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="gone">
        <EditText
            android:id="@+id/userIdEdt2Electricity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:textColor="@color/black_text_color"
            android:textColorHint="@color/grayTextHintColorFlight"
            android:singleLine="true"
            android:digits="@string/bill_edittext_digits"
            android:maxLength="@integer/billNumberMaxLength"
            android:textSize="@dimen/simple_content_text_size"/>
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>