<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pnr"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/medium_margin"
                    />
                <EditText
                    android:id="@+id/pnr_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/color_white"
                    android:padding="@dimen/medium_margin"
                    android:background="@color/filterBackground"
                    android:layout_marginTop="@dimen/very_small_margin"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:hint="@string/pnr"
                    android:textColorHint="@color/color_white_hint"/>

                <TextView
                    android:id="@+id/get_pnr_response_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:padding="@dimen/small_margin"
                    android:gravity="center"
                    android:background="@drawable/blue_round_button_background"
                    android:text="@string/getResponse"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/title_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/referenceId"
                    android:textColor="@color/color_white"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/very_large_margin"/>
                <EditText
                    android:id="@+id/reference_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/color_white"
                    android:padding="@dimen/medium_margin"
                    android:background="@color/filterBackground"
                    android:layout_marginTop="@dimen/very_small_margin"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:hint="@string/referenceId"
                    android:textColorHint="@color/color_white_hint"/>

                <TextView
                    android:id="@+id/get_reference_response_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:padding="@dimen/small_margin"
                    android:gravity="center"
                    android:background="@drawable/blue_round_button_background"
                    android:text="@string/getResponse"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/title_text_size" />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
            <TextView
                android:id="@+id/response_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_white"
                android:background="@color/edittext_light_background_color"
                android:padding="@dimen/medium_margin"
                android:visibility="gone"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:text=""
                />
            </ScrollView>

        </LinearLayout>





</RelativeLayout>


