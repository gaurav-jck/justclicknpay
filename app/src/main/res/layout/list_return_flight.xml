<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/passengerMainLin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/deptImg"
                    android:layout_width="@dimen/flightAirlineImageSize"
                    android:layout_height="@dimen/flightAirlineImageSize"
                    android:background="@drawable/goflight"
                    android:layout_marginRight="@dimen/large_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_d_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time"
                            android:textColor="@color/textBlackColorFlight"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_d_totalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/small_text_size"
                            android:textColor="@color/darkGrayColorFlight"
                            android:text="Duration" />

                        <TextView
                            android:id="@+id/tv_a_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="time"
                            android:textColor="@color/textBlackColorFlight"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grayLightColorFlight"
                        android:layout_marginLeft="@dimen/medium_margin"
                        android:layout_marginRight="@dimen/medium_margin"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/grayTextColorFlight"
                            android:text="CITY" />

                        <TextView
                            android:id="@+id/tv_stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Stop"
                            android:textColor="@color/darkGrayColorFlight"
                            android:textSize="@dimen/small_text_size"/>

                        <TextView
                            android:id="@+id/tv_destination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/grayTextColorFlight"
                            android:text="CITY" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/medium_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="center">

                <ImageView
                    android:id="@+id/arrImg"
                    android:layout_width="@dimen/flightAirlineImageSize"
                    android:layout_height="@dimen/flightAirlineImageSize"
                    android:background="@drawable/returnflight"
                    android:layout_marginRight="@dimen/large_margin"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_rd_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="time"
                            android:textColor="@color/textBlackColorFlight"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_rd_totalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textSize="@dimen/small_text_size"
                            android:textColor="@color/darkGrayColorFlight"
                            android:text="Duration" />

                        <TextView
                            android:id="@+id/tv_ra_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="time"
                            android:textColor="@color/textBlackColorFlight"
                            android:textSize="@dimen/text_size_14sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/grayLightColorFlight"
                        android:layout_marginLeft="@dimen/medium_margin"
                        android:layout_marginRight="@dimen/medium_margin"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_rsource"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/grayTextColorFlight"
                            android:text="CITY" />

                        <TextView
                            android:id="@+id/tv_rstop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Stop"
                            android:textColor="@color/darkGrayColorFlight"
                            android:textSize="@dimen/small_text_size"/>

                        <TextView
                            android:id="@+id/tv_rdestination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/text_size_14sp"
                            android:textColor="@color/grayTextColorFlight"
                            android:text="CITY" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/small_margin"
            android:paddingRight="@dimen/small_margin">
            <TextView
                android:id="@+id/tv_grand_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fare"
                android:textStyle="bold"
                android:layout_gravity="right"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/app_blue_color"/>
            <TextView
                android:id="@+id/refundTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refundable"
                android:layout_gravity="right"
                android:paddingTop="@dimen/margin_2dp"
                android:textSize="@dimen/small_text_size11sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayViewColorFlight"
        android:layout_marginTop="@dimen/medium_margin"/>

</LinearLayout>