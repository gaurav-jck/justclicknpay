<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.justclick.clicknbook.fingoole.view.InsuranceFragment">

    <RelativeLayout
        android:id="@+id/titleLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tittleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="@string/nav_insurance"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/back_arrow_size"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="@dimen/very_small_margin"
            app:srcCompat="@drawable/back_arrow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/medium_margin">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_gravity="center_vertical"
        android:scrollbars="vertical">
    <LinearLayout
        android:id="@+id/nameLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/nameImg"
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/user_name_icon"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_edt_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin">
            <EditText
                android:id="@+id/nameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_full_name"
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                android:visibility="visible"
                android:inputType="textPersonName"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:maxLength="@integer/nameMaxLength"
                android:maxLines="1"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/nameLin"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"/>

    <LinearLayout
        android:id="@+id/mobileLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/nameLin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mobileImg"
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/mobile_icon"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile_edt_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin">
            <EditText
                android:id="@+id/mobileEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterMobile"
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                android:visibility="visible"
                android:inputType="number"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:maxLength="@integer/mobileMaxLength"
                android:maxLines="1"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/mobileLin"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"/>

    <LinearLayout
        android:id="@+id/emailLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mobileLin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/emailImg"
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/email_icon"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_edt_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin">
            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enterEmail"
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                android:visibility="visible"
                android:inputType="textEmailAddress"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:maxLength="@integer/emailMaxLength"
                android:maxLines="1"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/emailLin"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"/>

    <LinearLayout
        android:id="@+id/planLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/emailLin"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/credit_list_icon"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/small_margin"
            android:paddingLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plan_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="Select plan"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin"
            >
            <AutoCompleteTextView
                android:id="@+id/planAtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLines="1"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:text=""
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_weight="1"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@+id/planLin"/>

    <LinearLayout
        android:id="@+id/typeLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/planLin"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/credit_list_icon"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/small_margin"
            android:paddingLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:hint="Select insurance type"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin">
            <AutoCompleteTextView
                android:id="@+id/typeAtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:inputType="none"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:text=""
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_weight="1"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"
        app:layout_constraintTop_toBottomOf="@+id/typeLin"/>

        <LinearLayout
            android:id="@+id/daysLin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_margin"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintTop_toBottomOf="@+id/typeLin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/editTextIconSize"
                android:layout_height="@dimen/editTextIconSize"
                app:srcCompat="@drawable/credit_list_icon"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/very_small_margin"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/days_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:hint="Select no of days"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_marginTop="@dimen/small_margin">
                <AutoCompleteTextView
                    android:id="@+id/daysAtv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:inputType="none"
                    android:paddingTop="@dimen/medium_margin"
                    android:paddingBottom="@dimen/small_margin"
                    android:paddingLeft="@dimen/medium_margin"
                    android:text=""
                    android:textColor="@color/text_dark_gray"
                    android:background="@color/transparent"
                    android:textColorHint="@color/grayTextHintColorFlight"
                    android:textSize="@dimen/simple_content_text_size"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_weight="1"
            android:background="@color/gray_color_light"
            android:layout_marginTop="@dimen/small_margin"
            app:layout_constraintTop_toBottomOf="@+id/daysLin"/>


        <LinearLayout
        android:id="@+id/dateLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/daysLin"
            android:paddingTop="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
            android:visibility="visible"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/dateImg"
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/calendar_icon_small"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:clickable="false"
            android:hint="@string/policyStartDate"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin">
            <EditText
                android:id="@+id/dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                android:visibility="visible"
                android:inputType="none"
                android:focusable="false"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:maxLength="@integer/emailMaxLength"
                android:maxLines="1"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/dateLin"
        android:background="@color/gray_color_light"
        android:visibility="visible"
        android:layout_marginTop="@dimen/small_margin"/>

    <LinearLayout
        android:id="@+id/FinalAmountLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateLin"
        android:paddingTop="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/amountImg"
            android:layout_width="@dimen/editTextIconSize"
            android:layout_height="@dimen/editTextIconSize"
            app:srcCompat="@drawable/calendar_icon_small"
            android:layout_gravity="bottom"
            android:padding="2dp"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginLeft="@dimen/very_small_margin"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:hint="@string/finalAmount"
            android:textColorHint="@color/grayTextHintColorFlight"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/small_margin">
            <EditText
                android:id="@+id/amountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/finalAmount"
                android:textColor="@color/text_dark_gray"
                android:background="@color/transparent"
                android:textColorHint="@color/grayTextHintColorFlight"
                android:textSize="@dimen/simple_content_text_size"
                android:visibility="visible"
                android:inputType="none"
                android:enabled="false"
                android:paddingTop="@dimen/medium_margin"
                android:paddingBottom="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin"
                android:maxLength="@integer/emailMaxLength"
                android:maxLines="1"
                android:text=""
                />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        app:layout_constraintTop_toBottomOf="@+id/FinalAmountLin"
        android:background="@color/gray_color_light"
        android:layout_marginTop="@dimen/small_margin"/>

    <TextView
        android:id="@+id/buyPolicyTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_margin"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="@color/app_red_color"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_18sp"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/FinalAmountLin"
        android:text="@string/buyPolicy" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:textColor="@color/gray_color"
        android:textSize="@dimen/small_text_size"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/buyPolicyTv"
        android:text="@string/buyPolicyNote" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
