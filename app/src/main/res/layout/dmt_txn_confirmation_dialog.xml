<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:background="@color/colorPrimary"
        android:padding="@dimen/small_margin"
        android:gravity="center"
        android:textSize="@dimen/text_size_15sp"
        android:text="Confirm Your Transaction"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please confirm, you want to make this transaction."
        android:layout_gravity="center"
        android:textSize="@dimen/text_size_15sp"
        android:textColor="@color/app_blue_color"
        android:layout_margin="@dimen/medium_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/filterBackground"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/medium_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:textColor="@color/black_text_color"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_15sp"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text=":"
            android:textColor="@color/dark_blue_color"
            android:background="@color/transparent"
            android:textSize="@dimen/list_view_name_field_text_size"
            />

        <TextView
            android:id="@+id/amountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:layout_gravity="center_vertical"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/text_size_16sp"
            android:padding="@dimen/small_margin"
            android:background="@color/transparent"
            android:text="" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/filterBackground"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/small_margin">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="Account Number"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text=":"
            android:textColor="@color/dark_blue_color"
            android:background="@color/transparent"
            android:textSize="@dimen/list_view_name_field_text_size"
            />


        <TextView
            android:id="@+id/accountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textColor="@color/dark_blue_color"
            android:padding="@dimen/small_margin"
            android:textSize="@dimen/text_size_16sp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/filterBackground"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/small_margin">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/medium_margin"
            android:paddingRight="@dimen/medium_margin"
            android:text="Name"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:text=":"
            android:textColor="@color/dark_blue_color"
            android:background="@color/transparent"
            android:textSize="@dimen/list_view_name_field_text_size"
            />


        <TextView
            android:id="@+id/nameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textColor="@color/dark_blue_color"
            android:padding="@dimen/small_margin"
            android:textSize="@dimen/text_size_16sp"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_large_margin"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:layout_margin="@dimen/very_small_margin"
            android:padding="@dimen/small_margin"
            android:text="Cancel"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:layout_margin="@dimen/very_small_margin"
            android:padding="@dimen/small_margin"
            android:text="Confirm"
            android:textColor="@color/color_white" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>