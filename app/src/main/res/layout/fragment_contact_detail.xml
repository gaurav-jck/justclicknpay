<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.cashoutnew.registration.ContactDetailFragment"
    android:padding="@dimen/small_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textColor="@color/white"
        android:padding="@dimen/margin_7dp"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginTop="@dimen/medium_margin"
        android:fontFamily="@font/klinic_slab_medium"
        android:background="@drawable/red_rectangle_button_background"/>

    <!--salutation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@drawable/registration_edittext_back"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user_name_icon"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/login_text_color"/>

        <Spinner
            android:id="@+id/salutation_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_gravity="center_vertical"
            android:textColor="@color/login_text_color"
            />

    </LinearLayout>

    <!--first name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="visible"
        android:background="@drawable/registration_edittext_back"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user_name_icon"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/login_text_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            >

            <EditText
                android:id="@+id/first_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_3dp"
                android:layout_margin="@dimen/small_margin"
                android:textColor="@color/login_text_color"
                android:hint="@string/user_first_name"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:maxLength="@integer/nameMaxLength"
                android:digits="@string/personName_editText_digits"
                android:textColorHint="@color/registration_hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!--last name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="visible"
        android:background="@drawable/registration_edittext_back"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user_name_icon"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/login_text_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            >

            <EditText
                android:id="@+id/user_last_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_3dp"
                android:layout_margin="@dimen/small_margin"
                android:textColor="@color/login_text_color"
                android:hint="@string/user_last_name"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:maxLength="@integer/nameMaxLength"
                android:digits="@string/personName_editText_digits"
                android:textColorHint="@color/registration_hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!--mobile-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="visible"
        android:background="@drawable/registration_edittext_back"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user_name_icon"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/login_text_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            >

            <EditText
                android:id="@+id/mobile_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_3dp"
                android:layout_margin="@dimen/small_margin"
                android:textColor="@color/login_text_color"
                android:hint="@string/user_mobile"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="number"
                android:digits="@string/mobile_digit"
                android:maxLength="@integer/mobileMaxLength"
                android:textColorHint="@color/registration_hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <!--email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:visibility="visible"
        android:background="@drawable/registration_edittext_back"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/user_name_icon"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/login_text_color"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            >

            <EditText
                android:id="@+id/email_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="@dimen/padding_3dp"
                android:layout_margin="@dimen/small_margin"
                android:textColor="@color/login_text_color"
                android:hint="@string/user_email"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:maxLength="@integer/emailMaxLength"
                android:textColorHint="@color/registration_hint_color"
                />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/continue_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_blue_button_background"
        android:gravity="center"
        android:padding="12dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_16sp"
        android:text="Continue"
        android:layout_marginTop="@dimen/very_large_margin"
        android:layout_marginLeft="@dimen/login_content_margin"
        android:layout_marginRight="@dimen/login_content_margin" />

</LinearLayout>