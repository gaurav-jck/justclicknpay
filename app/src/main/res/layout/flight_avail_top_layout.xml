<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/pageTopPadding"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    >

    <include layout="@layout/back_image_blue"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_back"
        android:layout_toLeftOf="@+id/editSearchImg"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/medium_margin">

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi - Mumbai"
            android:textColor="@color/textBlackColorFlight"
            android:textSize="@dimen/simple_content_text_size"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dep_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/grayTextColorFlight"/>

            <TextView
                android:id="@+id/tv_total_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/grayTextColorFlight"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/editSearchImg"
        android:layout_width="@dimen/filterIconSize"
        android:layout_height="@dimen/filterIconSize"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/filterImg"
        android:background="@drawable/edit_searh"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/filterImg"
        android:layout_width="@dimen/filterIconSize"
        android:layout_height="@dimen/filterIconSize"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:background="@drawable/filter_icon_blue" />
</RelativeLayout>