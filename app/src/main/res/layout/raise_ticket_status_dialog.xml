<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@color/color_white"
    android:weightSum="1">
    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin"
        android:paddingTop="@dimen/very_small_margin"
        android:paddingBottom="@dimen/very_small_margin"
        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/back_arrow_size"
            android:layout_height="@dimen/back_arrow_size"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_1dp"
            app:srcCompat="@drawable/arrow_left_back" />

        <TextView
            android:id="@+id/fromStationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_toRightOf="@+id/back_arrow"
            android:padding="@dimen/margin_7dp"
            android:text="List Filter"
            android:textColor="@color/color_white"
            android:textSize="@dimen/simple_content_text_size" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_top"
        android:layout_above="@+id/applyLin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/small_margin"
            >

            <TextView
                android:id="@+id/agentLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compl 1234"
                android:padding="@dimen/small_margin"
                android:textColor="@color/darkBlueColor"
                android:background="@color/traveller_gray_color"
                android:layout_marginTop="@dimen/small_margin"
                android:textSize="@dimen/text_size_15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ticket ID"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/ticketIdTv"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234"
                    android:textColor="@color/color_grey"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product Type"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/productTypeTv"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234"
                    android:textColor="@color/color_grey"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Issue Type"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/issueTypeTv"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234"
                    android:textColor="@color/color_grey"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remarks"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/remarksTv"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234"
                    android:textColor="@color/color_grey"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_marginTop="@dimen/small_margin">

                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date &amp; Time"
                    android:textSize="@dimen/text_size_14sp"/>

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234"
                    android:textColor="@color/color_grey"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_14sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30dp"
                android:text="Status"
                android:textColor="@color/app_blue_color"
                android:textSize="@dimen/small_text_size"
                android:layout_marginLeft="@dimen/margin_7dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_7dp"
                android:paddingBottom="@dimen/margin_7dp"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_marginRight="@dimen/small_margin">

                <Spinner
                    android:id="@+id/statusSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Status"
                    android:maxLines="1"
                    android:textSize="@dimen/simple_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/down_arrow"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/app_blue_color"
                android:layout_marginLeft="@dimen/margin_7dp"
                android:layout_marginRight="@dimen/margin_7dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
                android:layout_marginRight="@dimen/add_beneficiary_side_margin"
                android:layout_marginTop="@dimen/medium_margin">

                <EditText
                    android:id="@+id/remarksEdt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Remarks"
                    android:inputType="text"
                    android:maxLength="@integer/query_maxLength"
                    android:text=""
                    android:minLines="2"
                    android:textColor="@color/black_text_color"
                    android:textSize="@dimen/text_size_18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/logsLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/logsLabelTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logs"
                    android:gravity="center"
                    android:padding="@dimen/small_margin"
                    android:textColor="@color/white"
                    android:background="@color/app_blue_color"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:textSize="@dimen/text_size_15sp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/logsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/applyLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/large_margin"
        android:padding="@dimen/margin_5dp">
        <TextView
            android:id="@+id/submitTv"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit"
            android:padding="@dimen/margin_7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp"
            android:gravity="center"
            android:background="@drawable/app_blue_round_button_background"
            />
        <TextView
            android:id="@+id/logsTv"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Logs"
            android:padding="@dimen/margin_7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:gravity="center"
            android:background="@drawable/app_blue_round_button_background"
            />
    </LinearLayout>

</RelativeLayout>




