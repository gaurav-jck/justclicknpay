<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup"
    android:background="@color/color_white"
    android:padding="@dimen/large_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/close"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp">

        <TextView
            android:id="@+id/for_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/text_size_16sp"

            />
    </LinearLayout>

    <TextView

        android:id="@+id/detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_detail"
        android:textColor="@color/app_blue_color"
        android:layout_marginTop="@dimen/size_30dp">

    </TextView>

        <EditText
            android:id="@+id/email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_blue_color"
            android:hint="Please enter Email"
            android:maxLines="1"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="@color/transparent"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/lightBlueColor"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_blue_color"/>

    <EditText
        android:id="@+id/mobile_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_blue_color"
        android:hint="Please enter Mobile"
        android:maxLines="1"
        android:layout_marginTop="@dimen/large_margin"
        android:background="@color/transparent"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="@integer/mobileMaxLength"
        android:textColorHint="@color/lightBlueColor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_blue_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:gravity="right">
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/color_white"
            android:visibility="gone"/>
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/color_white" />

    </LinearLayout>
</LinearLayout>
