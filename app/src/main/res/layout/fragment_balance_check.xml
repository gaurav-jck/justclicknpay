<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/cardMobileBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_50dp"
            android:orientation="vertical">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/agent_dashboard_title"-->
            <!--android:textSize="@dimen/title_text_size"-->
            <!--android:padding="@dimen/medium_padding"-->
            <!--android:background="@color/app_blue_color"-->
            <!--android:textColor="@color/color_white"/>-->

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:gravity="center"
                android:paddingBottom="@dimen/medium_margin"
                android:text="@string/welcome_agent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/title_text_size" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/filterBackground"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/large_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Available credit"
                    android:textColor="@color/app_blue_color"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:textSize="@dimen/simple_content_text_size"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                   />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:text=":"
                    android:textColor="@color/dark_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    />

                <EditText
                    android:id="@+id/et_avlCrd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:enabled="false"
                    android:ems="10"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_blue_color"
                    android:inputType="none"
                    android:textSize="@dimen/title_text_size"
                    android:padding="@dimen/small_margin"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text="" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/filterBackground"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/large_margin">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:text="Account balance"
                    android:textColor="@color/app_blue_color"
                    android:textSize="@dimen/simple_content_text_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:text=":"
                    android:textColor="@color/dark_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    />


                <EditText
                    android:id="@+id/et_avlBala"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ems="10"
                    android:textColor="@color/dark_blue_color"
                    android:enabled="false"
                    android:inputType="none"
                    android:padding="@dimen/small_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/filterBackground"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/large_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking Balance"
                    android:textColor="@color/app_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/simple_content_text_size"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:text=":"
                    android:textColor="@color/dark_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    />


                <EditText
                    android:id="@+id/et_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ems="10"
                    android:textColor="@color/dark_blue_color"
                    android:enabled="false"
                    android:inputType="none"
                    android:padding="@dimen/small_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/filterBackground"
                android:layout_marginTop="@dimen/large_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distributor"
                    android:textColor="@color/app_blue_color"
                    android:background="@color/transparent"
                    android:paddingTop="@dimen/small_margin"
                    android:textSize="@dimen/simple_content_text_size"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:text=":"
                    android:textColor="@color/dark_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    />


                <EditText
                    android:id="@+id/distributor_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ems="10"
                    android:textColor="@color/dark_blue_color"
                    android:enabled="false"
                    android:inputType="none"
                    android:textSize="@dimen/simple_content_text_size"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/small_margin"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text=""
                    android:hint=""
                    android:textColorHint="@color/login_hint_color_new"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/filterBackground"
                android:layout_marginTop="@dimen/large_margin">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sales person"
                    android:textColor="@color/app_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/simple_content_text_size"
                    android:paddingTop="@dimen/small_margin"
                    android:paddingLeft="@dimen/medium_margin"
                    android:paddingRight="@dimen/medium_margin"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".12"
                    android:text=":"
                    android:textColor="@color/dark_blue_color"
                    android:background="@color/transparent"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    />

                <EditText
                    android:id="@+id/sales_person_edt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:ems="10"
                    android:textColor="@color/dark_blue_color"
                    android:enabled="false"
                    android:inputType="none"
                    android:padding="@dimen/small_margin"
                    android:layout_gravity="center_vertical"
                    android:background="@color/transparent"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:text=""
                    android:hint=""
                    android:textColorHint="@color/login_hint_color_new"/>




            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>


