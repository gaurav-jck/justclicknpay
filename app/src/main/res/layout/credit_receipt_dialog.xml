<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/dialogLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonsLin">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credit Card Bill Receipt"
            android:gravity="center"
            android:background="@color/app_blue_color"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:textSize="@dimen/simple_content_text_size"
            android:padding="@dimen/small_margin"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title"
            android:src="@drawable/app_icon"
            android:alpha=".1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title">
            <LinearLayout
                android:id="@+id/contentLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/large_margin"
                android:paddingBottom="@dimen/small_margin"
                android:orientation="vertical"
                android:layout_below="@+id/title"
                android:visibility="visible">

                <TextView
                    android:id="@+id/responseMsgTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_margin="@dimen/small_margin"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Agent Code"/>
                    <TextView
                        android:id="@+id/agentCodeTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/policyTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Card number"/>
                    <TextView
                        android:id="@+id/cardNoTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nameLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Name"/>
                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:id="@+id/operatorLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/refId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Card Type"/>
                    <TextView
                        android:id="@+id/networkTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Amount"/>
                    <TextView
                        android:id="@+id/amountTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Transaction Id"/>
                    <TextView
                        android:id="@+id/txnIdTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Reference Id"/>
                    <TextView
                        android:id="@+id/refIdTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Remarks"/>
                    <TextView
                        android:id="@+id/remarkTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Date"/>
                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/printDialogLableColor"
                        android:textSize="@dimen/text_size_14sp"
                        android:text="Status"/>
                    <TextView
                        android:id="@+id/statusTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="JCK"
                        android:gravity="right"
                        android:textSize="@dimen/text_size_14sp"
                        android:textColor="@color/dark_blue_color"
                        android:paddingRight="@dimen/small_margin"
                        android:layout_weight="1.2"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_light_black"
                    />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <TextView
        android:id="@+id/errorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction Incomplete"
        android:layout_centerInParent="true"
        android:textSize="@dimen/simple_content_text_size"
        android:gravity="center"
        android:textColor="@color/black"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/buttonsLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_margin"
        android:paddingRight="@dimen/medium_padding"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/back_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:paddingBottom="@dimen/small_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin"
            android:paddingTop="@dimen/small_margin"
            android:text="Back"
            android:visibility="visible"
            android:textColor="@color/color_white"
            android:textSize="@dimen/simple_content_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@color/app_blue_color"
            android:gravity="center"
            android:paddingBottom="@dimen/very_small_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingRight="@dimen/large_margin"
            android:paddingTop="@dimen/very_small_margin"
            android:text="Resend Delete OTP"
            android:textColor="@color/color_white"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>