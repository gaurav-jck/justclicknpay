    <LinearLayout
        android:id="@+id/bottomRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black_text_color"
        android:paddingLeft="@dimen/very_large_margin"
        android:paddingRight="@dimen/very_large_margin"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin">
        <LinearLayout
            android:id="@+id/callNowTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/medium_margin"
            android:paddingBottom="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@drawable/solid_round_blue_background"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/size_25dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_menu_camera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enquiryTv"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium_margin"
            android:paddingBottom="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:background="@drawable/solid_round_blue_background"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:src="@drawable/ic_menu_camera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>