        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
      >

        <include
            layout="@layout/back_image_blue"/>

        <TextView
            android:id="@+id/packageNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewCircle"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:textSize="@dimen/text_size_18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/loginTv"
            android:layout_toRightOf="@+id/img_back"
            android:textColor="@color/black_text_color"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/packageNameTv"
            android:gravity="center"
            android:layout_toRightOf="@+id/img_back"
            android:layout_marginLeft="@dimen/small_margin"
            android:visibility="visible"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/daysTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/hotelLightBlackTextColor"
                android:text=""/>

        </LinearLayout>

        <TextView
            android:id="@+id/loginTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            android:textColor="@color/detailColor"
            android:padding="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_border_white_background"
            />

    </RelativeLayout>


