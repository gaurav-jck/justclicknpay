<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_title_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/drawer_content_left_margin"
    android:layout_marginTop="@dimen/medium_margin">

        <LinearLayout
            android:id="@+id/main_title_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_gravity="center_vertical"
                    android:text="@string/nav_dashboard"
                    android:textSize="@dimen/drawer_content_title_size"
                    />
                <ImageView
                    android:id="@+id/iv_downarrow_dashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:rotation="180"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/down_arrow"/>
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/subItemContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_black_hint"
            android:layout_marginTop="@dimen/small_margin"
            android:alpha="0.4">

        </View>

</LinearLayout>