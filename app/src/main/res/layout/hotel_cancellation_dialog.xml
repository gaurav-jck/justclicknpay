<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Cancellation"
        android:gravity="center"
        android:padding="@dimen/large_margin"
        android:textColor="@color/app_blue_color"
        android:textSize="@dimen/title_text_size"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/coPassContainerLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cancel2Tv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/cancel_hotel_booking_icon"
            android:visibility="gone"
            android:layout_gravity="center"
            >
        </ImageView>
        <TextView
            android:id="@+id/cancel1Tv"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:padding="@dimen/very_small_margin"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="@dimen/medium_margin"
            >
        </TextView>
    </LinearLayout>

</ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/rechargeSuccessGrayTextColor"
        />
    <TextView
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:padding="@dimen/large_margin"
        android:gravity="center"
        android:textSize="@dimen/simple_content_text_size"
        android:layout_marginRight="@dimen/small_margin"
        android:textColor="@color/app_blue_color" />

</LinearLayout>
