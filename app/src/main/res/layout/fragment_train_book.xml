            android:src="@drawable/arrow_left_back"
            app:tint="@color/gray_color"
            android:rotation="270"
            android:layout_marginRight="@dimen/medium_margin"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/preferenceRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <RadioButton
            android:id="@+id/noChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Choice"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:checked="true"
            android:textColor="@color/color_light_black2"
            />
        <RadioButton
            android:id="@+id/onlyConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Only Confirm"
            android:layout_marginLeft="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_light_black2"
            />
        <RadioButton
            android:id="@+id/sameCoach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book ,only if all berths are allotted in same coach."
            android:layout_marginLeft="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_light_black2"
            />
        <RadioButton
            android:id="@+id/oneLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book, only if at least 1 lower berth is allotted"
            android:layout_marginLeft="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_light_black2"
            />
        <RadioButton
            android:id="@+id/twoLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book, only if 2 lower berths are allotted."
            android:layout_marginLeft="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_light_black2"
            />
        <RadioButton
            android:id="@+id/confirmSame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OnlyConfirm and In same coach."
            android:layout_marginLeft="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_light_black2"
            />
    </RadioGroup>


