                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_color_very_light"
                    android:padding="@dimen/medium_margin"
                    android:text="Fare Details"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/simple_content_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:rotation="270"
                    android:src="@drawable/arrow_left_back"
                    app:tint="@color/gray_color" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fareView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:background="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/baseFareEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Base fare"
                        android:inputType="text"
                        android:textSize="@dimen/text_size_16sp"
                        android:maxLength="@integer/nameMaxLength"
                        android:focusable="false"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:background="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/concessionEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Concession"
                        android:inputType="text"
                        android:textSize="@dimen/text_size_16sp"
                        android:maxLength="@integer/nameMaxLength"
                        android:focusable="false"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:background="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pgChargeEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="PG charge"
                        android:inputType="text"
                        android:textSize="@dimen/text_size_16sp"
                        android:maxLength="@integer/nameMaxLength"
                        android:focusable="false"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_7dp"
                    android:layout_marginRight="@dimen/margin_7dp"
                    android:layout_marginTop="@dimen/margin_7dp"
                    android:background="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/serviceChargeEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Service charge"
                        android:inputType="text"
                        android:textSize="@dimen/text_size_16sp"
                        android:maxLength="@integer/nameMaxLength"
                        android:focusable="false"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_7dp"
                    android:background="@null">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/totalFareEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Total Fare"
                        android:inputType="text"
                        android:textSize="@dimen/text_size_16sp"
                        android:maxLength="@integer/nameMaxLength"
                        android:focusable="false"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/boardingStnLabelRel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/very_large_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/train_background2"
                    android:padding="@dimen/margin_8dp"
                    android:text="Changes Boarding Station"
                    android:textColor="@color/text_dark_gray"
                    android:textSize="@dimen/simple_content_text_size" />

                <Spinner
                    android:id="@+id/spinnerBoardingStn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1dp"
                    android:layout_margin="@dimen/small_margin"
                    android:background="@color/gray_color"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Insurance"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/simple_content_text_size"
                android:padding="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/very_large_margin"
                android:background="@color/train_background3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/travellerTv"
                android:text="@string/travel_insurance"
                android:textColor="@color/text_dark_gray"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingTop="@dimen/small_margin"
                android:paddingBottom="@dimen/small_margin"
                />

            <RadioGroup
                android:id="@+id/insuranceRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/small_margin"
                android:paddingLeft="@dimen/medium_margin">
                <RadioButton
                    android:id="@+id/travelRadioYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_insurance_yes"
                    android:textColor="@color/listItemLightBlack"
                    android:checked="true"
                    android:paddingLeft="@dimen/small_margin"/>
                <RadioButton
                    android:id="@+id/travelRadioNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_insurance_no"
                    android:paddingLeft="@dimen/small_margin"
                    android:textColor="@color/listItemLightBlack" />
            </RadioGroup>

            <TextView
                android:id="@+id/bookTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed to Book"
                android:gravity="center"
                android:padding="@dimen/medium_margin"
                android:background="@drawable/solid_round_blue_background"
                android:backgroundTint="@color/app_blue_color"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginTop="@dimen/margin_30dp"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
