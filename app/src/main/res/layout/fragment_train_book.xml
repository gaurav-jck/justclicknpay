<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.justclick.clicknbook.Fragment.train.TrainBookFragment">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin"
        android:paddingTop="@dimen/very_small_margin"
        android:paddingBottom="@dimen/very_small_margin"
        >

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/back_arrow_size"
            android:layout_height="@dimen/back_arrow_size"
            app:srcCompat="@drawable/arrow_left_back"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_1dp"/>

        <TextView
            android:id="@+id/fromStationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_toRightOf="@+id/back_arrow"
            android:maxWidth="@dimen/_120sdp"
            android:maxLines="1"
            android:text="Saharanpur"
            android:textColor="@color/color_white"
            android:textSize="@dimen/simple_content_text_size" />

        <ImageView
            android:id="@+id/arrowImg"
            android:layout_width="@dimen/margin_30dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_back"
            android:foregroundGravity="center"
            android:layout_alignBottom="@+id/fromStationTv"
            android:rotation="180"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:layout_toRightOf="@id/fromStationTv"/>

        <TextView
            android:id="@+id/toStationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delhi"
            android:textSize="@dimen/simple_content_text_size"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@+id/arrowImg"
            android:layout_marginLeft="@dimen/large_margin"
            />

        <TextView
            android:id="@+id/dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday, 05 Apr 21"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/color_white_light2"
            android:layout_below="@+id/fromStationTv"
            android:layout_toRightOf="@+id/back_arrow"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/medium_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/travellerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rel_top"
                android:text="@string/flight_traveller_detail_title"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/simple_content_text_size"
                android:padding="@dimen/medium_margin"
                android:layout_marginTop="@dimen/margin_2dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="@dimen/small_margin">
                <EditText
                    android:id="@+id/cusMobileEdt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:background="@drawable/edittext_border_hotel"
                    android:text=""
                    android:layout_margin="@dimen/margin_2dp"
                    android:padding="@dimen/small_margin"
                    android:textSize="@dimen/text_size_15sp"
                    android:maxLength="@integer/mobileMaxLength"
                    android:singleLine="true"
                    android:maxLines="1"/>
                <TextView
                    android:id="@+id/getDetails2"
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/small_margin"
                    android:layout_margin="@dimen/margin_2dp"
                    android:textSize="@dimen/text_size_15sp"
                    android:text="Get Details"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/app_blue_round_button_background"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/travellerTv"
                android:text="@string/traveller_name_as_id"
                android:textColor="@color/darkBlueColor"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingTop="@dimen/small_margin"
                android:paddingBottom="@dimen/small_margin"
                android:visibility="gone"
                android:background="@color/gray_color_very_light"
                />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/simple_content_text_size"
                android:padding="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/medium_margin"
                android:background="@color/train_background2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/travellerTv"
                android:text="@string/contact_detail"
                android:textColor="@color/gray_color"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingTop="@dimen/small_margin"
                android:paddingBottom="@dimen/small_margin"
                />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:background="@null">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mobileEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:inputType="number"
                android:text=""
                android:textSize="@dimen/text_size_16sp"
                android:maxLength="@integer/mobileMaxLength"
                android:singleLine="true"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/getDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/small_margin"
            android:textSize="@dimen/text_size_15sp"
            android:text="Get Details"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@drawable/app_blue_round_button_background"/>
    </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:background="@null">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email-id"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_size_16sp"
                    android:maxLength="@integer/emailMaxLength"
                    android:singleLine="true"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

