<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardMobileBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pnr"
                    android:textColor="@color/app_blue_color"
                    android:layout_marginLeft="@dimen/medium_margin"
                    />
                <EditText
                    android:id="@+id/pnr_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/app_blue_color"
                    android:padding="@dimen/medium_margin"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/very_small_margin"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:hint="@string/pnr"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/login_hint_color_new"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:background="@color/app_blue_color"/>


                <TextView
                    android:id="@+id/get_pnr_response_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:padding="@dimen/small_margin"
                    android:gravity="center"
                    android:background="@drawable/blue_round_button_background"
                    android:text="@string/getResponse"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/title_text_size" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/referenceId"
                    android:textColor="@color/app_blue_color"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/very_large_margin"/>
                <EditText
                    android:id="@+id/reference_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="@color/app_blue_color"
                    android:padding="@dimen/medium_margin"
                    android:background="@color/transparent"
                    android:layout_marginTop="@dimen/very_small_margin"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:hint="@string/referenceId"
                    android:maxLength="20"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:digits="@string/alphaNumeric_editText_digits"
                    android:textColorHint="@color/login_hint_color_new"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:background="@color/app_blue_color"/>

                <TextView
                    android:id="@+id/get_reference_response_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/medium_margin"
                    android:layout_marginRight="@dimen/medium_margin"
                    android:layout_marginTop="@dimen/large_margin"
                    android:padding="@dimen/small_margin"
                    android:gravity="center"
                    android:background="@drawable/blue_round_button_background"
                    android:text="@string/getResponse"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/title_text_size" />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:layout_marginBottom="@dimen/medium_margin"
                >
            <TextView
                android:id="@+id/response_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue_color"
                android:background="@color/filterBackground"
                android:padding="@dimen/medium_margin"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:text=""
                android:hint="Response"
                android:textColorHint="@color/login_hint_color_new"
                />
            </ScrollView>

        </LinearLayout>





</RelativeLayout>


