<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup"
    android:background="@color/color_white"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/airLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/airImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_checked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Air"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dmtLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dmtImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="DMT"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mobileLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mobileImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Mobile"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/railLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/railImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Rail"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/busLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/busImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Bus"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotelLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Hotel"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/jctMoneyLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jctMoneyImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/radio_button_unchecked"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium_padding"
            android:text="Jct Money"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_below="@+id/radioGroup"
        >

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/app_blue_color"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="@string/cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_white_hint"
            android:paddingTop="@dimen/small_margin"
            android:paddingBottom="@dimen/small_margin"
            />

        <TextView
            android:id="@+id/submitSales_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/submit"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:padding="@dimen/small_margin"
            android:background="@color/app_blue_color"/>

    </LinearLayout>

</LinearLayout>


</ScrollView>


</RelativeLayout>
