<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/popup"
    android:background="@color/cardMobileBackground"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

     <TextView
         android:id="@+id/close_btn"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/color_white"
         android:background="@color/app_blue_color_light"
         android:paddingTop="@dimen/small_margin"
         android:paddingBottom="@dimen/small_margin"
         android:paddingRight="@dimen/large_margin"
         android:paddingLeft="@dimen/large_margin"
         android:gravity="center"
         android:text="Confirm Response"/>

    <!--<ScrollView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android" >-->
    <TextView
        android:id="@+id/detail_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:paddingTop="@dimen/margin_30dp"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:text="Message"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/simple_content_text_size" />
    <!--</ScrollView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_30dp"
        android:gravity="right"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_round_button_background"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:layout_margin="@dimen/small_margin"
            android:text="Ok"
            android:textColor="@color/color_white" />

    </LinearLayout>

</LinearLayout>