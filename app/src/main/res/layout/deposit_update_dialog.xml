<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:weightSum="1">

    <TextView
        android:id="@+id/update_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:background="@color/app_blue_color"
        android:padding="@dimen/medium_margin"
        android:gravity="center"
        android:textSize="@dimen/title_text_size"
        android:text="Update Deposit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardMobileBackground"
        android:orientation="vertical">


        <TextView
            android:id="@+id/agency_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="WELCOME"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/amount_requested_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:hint="Amount Requested"
            android:padding="@dimen/small_margin"
            android:textColor="@color/app_blue_color"
            android:textColorHint="@color/lightBlueColor"
            android:textSize="@dimen/simple_content_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@color/color_light_black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/medium_margin">

            <Spinner
                android:id="@+id/spinner_submit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"></Spinner>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:background="@color/color_light_black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@color/transparent"
            android:visibility="visible">

            <Spinner
                android:id="@+id/spinner_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"></Spinner>
        </LinearLayout>

        <View
            android:id="@+id/view_bank"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/color_light_black"/>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:visibility="visible">

            <EditText
            android:id="@+id/amount_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/app_blue_color"
            android:textColorHint="@color/lightBlueColor"
            android:textSize="@dimen/simple_content_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:visibility="visible">

            <EditText
            android:id="@+id/reduce_credit_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reduce Credit"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/app_blue_color"
            android:textColorHint="@color/lightBlueColor"
            android:textSize="@dimen/simple_content_text_size" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:visibility="visible">

            <EditText
                android:id="@+id/bank_ledger_reference_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/commonAllInputs_editText_digits"
                android:hint="@string/bank_ledger_reference"
                android:singleLine="true"
                android:textColor="@color/app_blue_color"
                android:textColorHint="@color/lightBlueColor"
                android:textSize="@dimen/simple_content_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:visibility="visible">
        <EditText
            android:id="@+id/bank_narration_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/commonAllInputs_editText_digits"
            android:hint="@string/bank_narration"
            android:singleLine="true"
            android:textColor="@color/app_blue_color"
            android:textColorHint="@color/lightBlueColor"
            android:textSize="@dimen/simple_content_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginTop="@dimen/very_small_margin"
            android:visibility="visible">
        <EditText
            android:id="@+id/remark_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/remarks_editText_digits"
            android:hint="Remark"
            android:singleLine="true"
            android:textColor="@color/app_blue_color"
            android:textColorHint="@color/lightBlueColor"
            android:textSize="@dimen/simple_content_text_size" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/auto_reduce_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/medium_margin"
            android:padding="@dimen/small_margin"
            android:text="Reduce Credit"
            android:textColor="@color/app_blue_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/very_small_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/medium_margin"
                android:layout_weight="1"
                android:background="@drawable/blue_round_button_background"
                android:gravity="center"
                android:padding="@dimen/medium_margin"
                android:text="Cancel"
                android:textColor="@color/color_white"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/submit_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/small_margin"
                android:layout_weight="1"
                android:background="@drawable/blue_round_button_background"
                android:gravity="center"
                android:padding="@dimen/medium_margin"
                android:text="Submit"
                android:textColor="@color/color_white"
                android:textSize="@dimen/title_text_size" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>




