<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="Filter"
            android:gravity="center"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/color_white"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/cancelTv"
            android:layout_width="30dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cross_white"
            app:tint="@color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="@dimen/small_margin"
        android:textColor="@color/text_dark_gray"
        android:text="Transaction Type"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:background="@drawable/blue_border_white_background"
        >

        <Spinner
            android:id="@+id/typeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </Spinner>
    </LinearLayout>

    <TextView
        android:id="@+id/agentLabelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="@dimen/small_margin"
        android:textColor="@color/text_dark_gray"
        android:text="Confirmation Id"/>

    <EditText
        android:id="@+id/confirmIdEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_border_white_background"
        android:hint="Enter Confirmation Id"
        android:text=""
        android:maxLines="1"
        android:singleLine="true"
        android:digits="@string/filter_editText_digits"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_margin"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="@dimen/small_margin"
            android:textColor="@color/text_dark_gray"
            android:text="Updated By"/>

        <EditText
            android:id="@+id/updatedByEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_border_white_background"
            android:hint="Enter Staff Name"
            android:text=""
            android:maxLines="1"
            android:singleLine="true"
            android:maxLength="40"
            android:digits="@string/filter_editText_digits"
            android:layout_margin="@dimen/small_margin"
            android:padding="@dimen/small_margin"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_30dp"
            android:padding="@dimen/small_margin">
            <TextView
                android:id="@+id/resetTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:text="Reset"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/color_white"
                android:padding="@dimen/small_margin"
                android:layout_marginRight="@dimen/margin_2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/orange_color" />
            <TextView
                android:id="@+id/applyTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:text="Apply"
                android:gravity="center"
                android:textSize="@dimen/title_text_size"
                android:textColor="@color/color_white"
                android:padding="@dimen/small_margin"
                android:layout_alignParentBottom="true"
                android:background="@color/orange_color"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>