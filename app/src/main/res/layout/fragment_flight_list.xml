<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">


    <LinearLayout
        android:id="@+id/date_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_blue_color"
        android:padding="@dimen/very_small_margin"
        >

        <ImageView
            android:id="@+id/backArrowImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/back_arrow_size"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/very_small_margin"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fromCityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp"
                />

            <TextView
                android:id="@+id/FromdateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Oct 2017"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/roundImg"
                android:layout_width="@dimen/airSearchCalenderSize"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/both_side_arrow"
                />

            <TextView
                android:id="@+id/travellerInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 TRAVELLER"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ToCityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp"
                />

            <TextView
                android:id="@+id/ToDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Oct 2017"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/flightFilter"
            android:layout_width="@dimen/airSearchCalenderSize"
            android:layout_height="@dimen/airSearchCalenderSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/very_small_margin"
            android:src="@drawable/filter_white_icon"/>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/date_lin"/>


</RelativeLayout>


