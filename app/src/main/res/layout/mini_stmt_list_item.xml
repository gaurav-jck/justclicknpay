<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edittext_border_hotel"
    android:layout_margin="@dimen/very_small_margin"
    android:padding="@dimen/small_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/printDialogLableColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Txn Amount"/>
        <TextView
            android:id="@+id/amountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/small_margin"
            android:layout_weight="1.2"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_light_black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/printDialogLableColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Txn Type"/>
        <TextView
            android:id="@+id/txnTypeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dr"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/small_margin"
            android:layout_weight="1.2"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_light_black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/accountLabelTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/printDialogLableColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Date"/>
        <TextView
            android:id="@+id/dateTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10102021"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/small_margin"
            android:layout_weight="1.2"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_light_black"
        />

    <LinearLayout
        android:id="@+id/cardNameLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/very_small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/printDialogLableColor"
            android:textSize="@dimen/text_size_14sp"
            android:text="Narration"/>
        <TextView
            android:id="@+id/narrationTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/small_margin"
            android:layout_weight="1.2"/>

    </LinearLayout>
</LinearLayout>