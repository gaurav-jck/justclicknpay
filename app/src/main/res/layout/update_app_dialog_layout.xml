<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup"
    android:padding="@dimen/large_margin"
    android:background="@color/edittext_light_background_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/margin_5dp"
            android:background="@drawable/blue_round_button_background"
            android:text="Submit"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/resendOtpTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/submit_btn"
            android:layout_toRightOf="@+id/submit_btn"
            android:padding="@dimen/very_small_margin"
            android:text="Resend"
            android:textColor="@color/app_blue_color"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
