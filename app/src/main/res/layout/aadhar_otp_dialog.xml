<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/small_margin">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/back_arrow_size"
            android:layout_height="@dimen/back_arrow_size"
            app:srcCompat="@drawable/arrow_left_back"
            android:padding="@dimen/very_small_margin"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar Validation"
            android:textSize="@dimen/simple_content_text_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@id/back_arrow"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/irctc_adhar_validate"
        android:padding="@dimen/small_margin"
        android:textColor="@color/dark_blue_color"
        android:background="@color/color_white_hint"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:textSize="@dimen/simple_content_text_size"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/otpView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/very_large_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        >

        <EditText
            android:id="@+id/otpEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/mobile_digit"
            android:hint="Please enter OTP sent on your registered mobile"
            android:inputType="numberDecimal"
            android:maxLength="@integer/otp_maxLength6"
            android:text=""
            android:textColor="@color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/resendOtpLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/otpBtn"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginRight="@dimen/margin_10dp">
        <TextView
            android:id="@+id/noOtpTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did not receive OTP?"
            android:textColor="@color/app_blue_color"
            android:padding="@dimen/margin_2dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/timerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend otp in 60 sec"
            android:textColor="@color/orange_color"
            app:layout_constraintLeft_toRightOf="@+id/noOtpTv"
            app:layout_constraintTop_toTopOf="@+id/noOtpTv"
            android:padding="@dimen/margin_2dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin">
        <TextView
            android:id="@+id/cancelTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:background="@drawable/red_fill_round_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="@dimen/text_size_16sp"
            android:padding="@dimen/margin_7dp"/>

        <TextView
            android:id="@+id/generateOtpTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@drawable/blue_fill_round_background"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:padding="@dimen/margin_7dp"
            android:text="Generate OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/validateTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Validate OTP"
        android:visibility="visible"
        android:background="@drawable/blue_fill_round_background"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:textSize="@dimen/text_size_16sp"
        android:padding="@dimen/margin_7dp"/>

</LinearLayout>