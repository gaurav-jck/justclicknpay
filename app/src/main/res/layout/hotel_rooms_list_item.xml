<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/very_small_margin"
    android:background="@color/listItemBackground">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        card_view:cardBackgroundColor="@color/splash_white_light"
        card_view:cardCornerRadius="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/color_white"
        android:padding="@dimen/small_margin"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/roomName_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/listItemTextColorBlue"
                    android:textSize="@dimen/list_view_name_field_text_size"
                    android:text="Room Name"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1000000.00"
                    android:gravity="right"
                    android:textSize="@dimen/simple_content_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/listItemAmountColor"
                    android:paddingRight="@dimen/medium_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:layout_weight="1"/>

            </LinearLayout>
            <TextView
                android:id="@+id/amenity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/listItemDateColorLight"
                android:text="Amenities"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cancellationPolicy_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_weight="1"
                    android:layout_alignBottom="@+id/book_tv"
                    android:text="Refundable Policy"
                    android:textColor="@color/app_red_color"
                    android:textSize="@dimen/small_text_size10sp" />

                <TextView
                    android:id="@+id/book_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/small_margin"
                    android:layout_weight="0.7"
                    android:background="@drawable/blue_border_white_background"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/small_margin"
                    android:paddingRight="@dimen/medium_margin"
                    android:text="Book Now"
                    android:textColor="@color/darkBlueColor"
                    android:textSize="@dimen/simple_content_text_size"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

  </androidx.cardview.widget.CardView>


</LinearLayout>