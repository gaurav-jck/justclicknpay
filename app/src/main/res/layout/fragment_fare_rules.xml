<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Fragment.flights.fragments.FareRulesFragment"
    android:orientation="vertical"
    android:paddingTop="@dimen/pageTopPadding"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin"
    >

    <LinearLayout
        android:id="@+id/relTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite"
        android:padding="@dimen/very_small_margin"
        android:orientation="horizontal">

        <include layout="@layout/back_image_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Flight Fare Rules"
            android:textColor="@color/black_text_color"
            android:layout_marginLeft="@dimen/medium_margin"
            android:textSize="@dimen/title_text_size"
            />
    </LinearLayout>
    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:layout_below="@+id/relTop"
        android:background="@color/tabTextColor"/>

    <LinearLayout
        android:id="@+id/flightTypeLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_below="@+id/topView"
        android:visibility="visible">
    <TextView
        android:id="@+id/oneWayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:gravity="center"
        android:text="One Way"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/small_margin"
        android:background="@drawable/circular_round_gray_icon"
        />

    <TextView
        android:id="@+id/roundTripTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:gravity="center"
        android:text="Round Trip"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/textBlackColorFlight"
        android:padding="@dimen/small_margin"
        android:layout_marginLeft="@dimen/medium_margin"
        android:background="@drawable/circular_round_gray_icon"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passTypeLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_below="@+id/flightTypeLin"
        android:visibility="visible">
        <TextView
            android:id="@+id/adultTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="ADULT"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/small_margin"
            android:background="@color/app_blue_color"
            />

        <TextView
            android:id="@+id/childTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="CHILD"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:background="@color/grayColorFlight"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/infantTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="80dp"
            android:text="INFANT"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/colorWhite"
            android:padding="@dimen/small_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:background="@color/grayColorFlight"
            android:visibility="invisible"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/tableScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightTypeLin"
        android:layout_above="@+id/okTv"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancellation Penalty"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/simple_content_text_size"
                android:layout_marginTop="@dimen/medium_margin"
                android:padding="@dimen/small_margin"
                android:background="@color/app_blue_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin">
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adult"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Child"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Infant"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
            </LinearLayout>
            <!--<View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/grayViewColorFlight"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                />-->
            <LinearLayout
                android:id="@+id/cancelContainerLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:background="@drawable/edittext_border_hotel">

                <!--<include layout="@layout/fare_rules_item_view"/>-->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reschedule Penalty"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/simple_content_text_size"
                android:layout_marginTop="@dimen/large_margin"
                android:padding="@dimen/small_margin"
                android:background="@color/app_blue_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin">
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adult"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Child"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
                <TextView
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Infant"
                    android:gravity="center"
                    android:textColor="@color/textBlackColorFlight"
                    android:textSize="@dimen/text_size_14sp"
                    />
            </LinearLayout>
           <!-- <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/grayViewColorFlight"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                />-->
            <LinearLayout
                android:id="@+id/changeContainerLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:background="@drawable/edittext_border_hotel">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/textScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passTypeLin"
        android:layout_above="@+id/okTv"
        android:visibility="visible"
        android:layout_margin="@dimen/medium_margin"
        >
        <TextView
            android:id="@+id/textDescTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </ScrollView>

    <TextView
        android:id="@+id/okTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_blue_color"
        android:text="OK"
        android:gravity="center"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/colorWhite"
        android:padding="@dimen/margin_7dp"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"/>

</RelativeLayout>