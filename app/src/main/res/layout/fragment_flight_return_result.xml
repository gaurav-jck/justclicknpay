<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="false"
    android:orientation="vertical"
    android:paddingTop="@dimen/pageTopPadding"
    tools:context=".Fragment.flights.fragments.FlightAvailabilityOneWay">

    <include layout="@layout/flight_avail_top_return_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/sortingBackgroundColorFlight">

        <LinearLayout
            android:id="@+id/deptLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_dep_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/deptArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:rotation="-90"
                    android:visibility="invisible"/>
            </LinearLayout>
            <View
                android:id="@+id/deptView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="invisible"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_arr_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Arrival"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/arrArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_forward_flight"
                    android:rotation="-90"/>
            </LinearLayout>
            <View
                android:id="@+id/arrView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/durationLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_dur_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/durationArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:visibility="invisible"
                    android:rotation="-90"/>
            </LinearLayout>
            <View
                android:id="@+id/durationView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                android:visibility="invisible"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/priceLin"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_price_sort"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/darkGrayColorFlight"/>
                <ImageView
                    android:id="@+id/priceArrow"
                    android:layout_width="@dimen/filterSortingIconSize"
                    android:layout_height="@dimen/filterSortingIconSize"
                    android:src="@drawable/arrow_transit_flight"
                    android:rotation="-90"/>
            </LinearLayout>

            <View
                android:id="@+id/priceView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/app_blue_color"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/small_margin">

        <TextView
            android:id="@+id/selectFlightDestTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select flight to Dubai"
            android:textSize="@dimen/text_size_14sp"
            android:maxLength="@integer/maxLength30"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:textColor="@color/textBlackColorFlight"/>
        <TextView
            android:id="@+id/totalFlightsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select flight to Dubai"
            android:textColor="@color/darkGrayColorFlight"
            android:layout_marginLeft="@dimen/small_margin"
            android:maxLength="@integer/maxLength30"
            android:textSize="@dimen/small_text_size"
            android:layout_alignBottom="@+id/selectFlightDestTv"
            android:layout_toRightOf="@id/selectFlightDestTv"/>
        <ImageView
            android:id="@+id/rightImg"
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_gravity="right"
            android:src="@drawable/spr_fare_list_icn"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_flight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"/>

</LinearLayout>