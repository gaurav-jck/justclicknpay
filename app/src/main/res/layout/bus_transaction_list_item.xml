<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/very_small_margin"
    android:background="@color/listItemBackground">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction_lin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/very_small_margin"
        android:paddingRight="@dimen/very_small_margin"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/srNumberTv"
                android:layout_width="wrap_content"
                android:layout_weight=".1"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:textSize="@dimen/small_text_size"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text="1."/>

            <TextView
                android:id="@+id/bookingIdTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_14sp"
                android:gravity="left"
                android:text="B25127WZP0000212"/>
        </LinearLayout>


        <TextView
            android:id="@+id/pnrTv"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/small_margin"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_14sp"
            android:gravity="center"
            android:text="12345678987652"/>

        <TextView
            android:id="@+id/fareTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/app_red_color"
            android:textSize="@dimen/text_size_14sp"
            android:gravity="right"
            android:layout_marginRight="@dimen/very_small_margin"
            android:text="INR 000000"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_black_hint"/>

</LinearLayout>