<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/very_small_margin"
    android:background="@color/listItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/list_view_name_field_text_size"
            android:text="AgencyName/code"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp"
            android:text="Product Number"/>

        <TextView
            android:id="@+id/productIdTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text=""
            android:paddingRight="@dimen/medium_margin"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/product_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp"
            android:text="Product Type"/>

        <TextView
            android:id="@+id/product_tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Mobile"
            android:paddingRight="@dimen/small_margin"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/operatorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Prepaid"
            android:maxLength="12"
            android:ellipsize="end"
            android:paddingRight="@dimen/medium_margin"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/text_size_14sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/referenceId_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp"
            android:text="ReferenceId"/>

        <TextView
            android:id="@+id/referenceId_tv_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Admin"
            android:paddingRight="@dimen/medium_margin"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/text_size_14sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/very_small_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/requested_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.45"
            android:layout_gravity="center_vertical"
            android:text="Date"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/request_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="15/09/2017 12:19:29 AM"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/request_amount_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.56"
            android:gravity="right"
            android:paddingRight="@dimen/medium_margin"
            android:text="00"
            android:textColor="@color/app_red_color"
            android:textSize="@dimen/simple_content_text_size"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/margin_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:textColor="@color/listItemDateColorLight"
            android:textSize="@dimen/text_size_14sp"
            android:text="Status"/>

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Success"
            android:paddingRight="@dimen/medium_margin"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>


</LinearLayout>