<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/small_margin"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2dp"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="@dimen/small_margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_margin">

            <TextView
                android:id="@+id/comNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Comp 126262"
                android:textSize="@dimen/simple_content_text_size"
                android:textColor="@color/app_blue_color"
                />

            <TextView
                android:id="@+id/productTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DMT"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/small_text_size"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/agentIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/comNoTv"
                app:layout_constraintStart_toStartOf="parent"
                android:text="JC0A3445"
                android:textSize="@dimen/simple_content_text_size"
                />

            <TextView
                android:id="@+id/issueTypeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_3dp"
                android:paddingBottom="@dimen/margin_3dp"
                android:text="Issue Type"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/text_size_14sp"
                app:layout_constraintTop_toBottomOf="@+id/agentIdTv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/small_margin"
                />
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/issueTypeTv"
                android:layout_marginTop="@dimen/small_margin"
                android:text="28/01/2022 01:23:00 AM"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/grey_dark"/>

            <TextView
                android:id="@+id/mobileTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="M. 8988232443"
                android:textColor="@color/text_dark_gray"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/issueTypeTv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/small_margin"/>

            <TextView
                android:id="@+id/emailTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="test@test.com"
                android:layout_marginTop="@dimen/margin_3dp"
                android:textColor="@color/text_dark_gray"
                app:layout_constraintTop_toBottomOf="@id/dateTv"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/viewTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/viewImage"
                android:layout_marginTop="@dimen/margin_3dp"
                android:padding="@dimen/margin_3dp"
                android:textColor="@color/blue_color"
                app:layout_constraintTop_toBottomOf="@id/emailTv"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="open"
                android:padding="@dimen/margin_3dp"
                android:textColor="@color/blue_color"
                app:layout_constraintTop_toBottomOf="@id/emailTv"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>