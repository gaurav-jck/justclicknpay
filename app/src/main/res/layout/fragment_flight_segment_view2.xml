<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/medium_margin"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sourceImg"
            android:layout_width="@dimen/search_icon_size"
            android:layout_height="@dimen/search_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"/>

        <TextView
            android:id="@+id/flightNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="INDIGO"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/simple_content_text_size" />
        <TextView
            android:id="@+id/flightCodeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="6E - 755"
            android:layout_marginLeft="@dimen/small_margin"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/sourceNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/simple_content_text_size"
                android:text="New Delhi"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle=""
                android:maxLength="14"/>
            <TextView
                android:id="@+id/sourceCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayTextLightColorFlight"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="(Del)"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/very_small_margin" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/destCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayTextLightColorFlight"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="(Del)"
                android:layout_toLeftOf="@+id/destNameTv"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:paddingRight="@dimen/very_small_margin" />
            <TextView
                android:id="@+id/destNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/simple_content_text_size"
                android:text="Mumbai"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="14"
                android:layout_alignParentRight="true"
                android:maxLines="1"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/deptTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/simple_content_text_size"
                android:text="09:20"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxLength="12"/>
            <TextView
                android:id="@+id/deptDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="17 Jan"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/very_small_margin" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/durationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3h3m"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/small_text_size10sp"
                android:padding="@dimen/margin_2dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/grayTextColorFlight"
                android:padding="@dimen/very_small_margin"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right">
            <TextView
                android:id="@+id/arrDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="17 Jan"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/very_small_margin" />
            <TextView
                android:id="@+id/arrTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/simple_content_text_size"
                android:text="09:20"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2dp"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:id="@+id/deptTerminalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle=""
                android:maxLength="4"/>
            <TextView
                android:id="@+id/deptAirportTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayTextLightColorFlight"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="(Del)"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/very_small_margin" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/small_margin">
            <TextView
                android:id="@+id/arrivalAirportTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grayTextLightColorFlight"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text="(Del)"
                android:layout_toLeftOf="@+id/arrTerminalTv"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:paddingRight="@dimen/very_small_margin" />
            <TextView
                android:id="@+id/arrTerminalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_text_color"
                android:gravity="center_vertical"
                android:textSize="@dimen/small_text_size"
                android:text=""
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="4"
                android:layout_alignParentRight="true"
                android:maxLines="1"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baggage_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:text="Baggage Info:"
            android:textColor="@color/darkGrayColorFlight"
            android:layout_marginTop="@dimen/very_small_margin"
            android:layout_marginLeft="@dimen/small_margin"/>
        <TextView
            android:id="@+id/baggageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            android:text="ghrhrg"
            android:layout_marginTop="@dimen/very_small_margin"
            android:textColor="@color/grayTextLightColorFlight"
            android:layout_marginLeft="@dimen/small_margin"/>
    </LinearLayout>

    <TextView
        android:id="@+id/connectionTimeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3h3m"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/darkGrayColorFlight"
        android:textSize="@dimen/small_text_size10sp"
        android:layout_marginTop="@dimen/small_margin"
        />
    <View
        android:id="@+id/connectionView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="@color/gray_color_hotel_review"
        android:padding="@dimen/size_1dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/small_margin"
        />


</LinearLayout>
