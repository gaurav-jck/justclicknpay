<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/recharge_layout_gas"
    tools:context="com.justclick.clicknbook.Fragment.recharge.RechargeConfirmationFragment"
    tools:showIn="@layout/fragment_mobile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/large_margin">
        <Spinner
            android:id="@+id/spinner_gas_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            >
        </Spinner>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@color/color_light_black"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/very_small_margin">
    <EditText
         android:id="@+id/gas_amount_edt"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:hint="@string/enter_amount"
        android:textColorHint="@color/flightSearchHintColor"
        android:textColor="@color/black_text_color"
         android:inputType="numberDecimal"
         android:maxLength="10"
         android:textSize="@dimen/simple_content_text_size"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@color/app_blue_color"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/very_small_margin">
    <EditText
        android:id="@+id/gas_account_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_customer_id"
        android:textColorHint="@color/flightSearchHintColor"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/simple_content_text_size"
        android:inputType="number"
        android:maxLength="15"
        />
    </com.google.android.material.textfield.TextInputLayout>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@color/app_blue_color"/>-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/view_gas_billGroup_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/very_small_margin">
    <EditText
        android:id="@+id/gas_billGroup_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_bill_group"
        android:textColorHint="@color/flightSearchHintColor"
        android:textColor="@color/black_text_color"
        android:textSize="@dimen/simple_content_text_size"
        android:inputType="number"
        android:maxLength="8"
        />
    </com.google.android.material.textfield.TextInputLayout>

   <!-- <View
        android:id="@+id/view_gas_billGroup_edt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:background="@color/app_blue_color"/>-->


</LinearLayout>
