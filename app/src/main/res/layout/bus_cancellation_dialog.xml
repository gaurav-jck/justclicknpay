<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup"
    android:background="@color/color_white"
    android:padding="@dimen/large_margin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/busCancellationTitle"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/title_text_size"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Cancellation Time"
                android:textColor="@color/app_blue_color"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/app_blue_color"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="right"
                android:text="Cancellation Charge(%)"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel1Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/cancel11Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel2Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/cancel21Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/very_small_padding"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel3Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/cancel31Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/very_small_padding"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel4Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/cancel41Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/very_small_padding"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel5Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text=""
                android:padding="@dimen/very_small_padding"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:id="@+id/cancel51Tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/very_small_padding"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/specialTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_margin"
        android:textColor="@color/app_red_color"
        android:layout_marginBottom="@dimen/small_margin"
        android:textSize="@dimen/small_text_size10sp"
        android:text=""/>

    <TextView
        android:id="@+id/close_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_round_button_background"
        android:text="OK"
        android:padding="@dimen/small_margin"
        android:gravity="center"
        android:layout_marginRight="@dimen/small_margin"
        android:textColor="@color/color_white" />

</LinearLayout>
