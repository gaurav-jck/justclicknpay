<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/recRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/flightListMainColor"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:visibility="visible">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/arrowImg"
            android:padding="@dimen/small_margin"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />


        <TextView
            android:id="@+id/amountTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/small_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:gravity="right"
            android:text="4000"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewLinear"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:padding="@dimen/small_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipientLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recipient"
            android:textColor="@color/transactionListLabelColor"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/recipientTv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:gravity="right"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue_color"
            android:paddingRight="@dimen/medium_margin"
            android:layout_weight="1"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/printDialogLableColor"
                android:textSize="@dimen/text_size_14sp"
                android:text="JCT Ref ID"/>
            <TextView
                android:id="@+id/jctTxnIdTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100100"
                android:gravity="right"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/dark_blue_color"
                android:paddingRight="@dimen/small_margin"
                android:layout_weight="1.2"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_light_black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/printDialogLableColor"
                android:textSize="@dimen/text_size_14sp"
                android:text="Transaction ID"/>

            <TextView
                android:id="@+id/txnIdTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="right"
                android:paddingRight="@dimen/small_margin"
                android:text="id"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_light_black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/printDialogLableColor"
                android:textSize="@dimen/text_size_14sp"
                android:text="Bank Ref No"/>
            <TextView
                android:id="@+id/bankRefNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100100"
                android:gravity="right"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/dark_blue_color"
                android:paddingRight="@dimen/small_margin"
                android:layout_weight="1.2"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_light_black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/printDialogLableColor"
                android:textSize="@dimen/text_size_14sp"
                android:text="Txn Message"/>
            <TextView
                android:id="@+id/txnMessageTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="100100"
                android:gravity="right"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="@color/dark_blue_color"
                android:paddingRight="@dimen/small_margin"
                android:layout_weight="1.2"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_light_black"
            android:visibility="gone"
            />

</LinearLayout>
    </LinearLayout>