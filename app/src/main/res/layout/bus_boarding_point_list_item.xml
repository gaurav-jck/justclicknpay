<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemLin"
    android:paddingLeft="@dimen/small_margin"
    android:paddingRight="@dimen/small_margin">

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7:30 PM"
        android:paddingLeft="@dimen/small_margin"
        android:paddingTop="2dp"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/flightBlackColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"

        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/map_pin"
            android:layout_gravity="center_horizontal"
            />

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:minHeight="20dp"
            android:background="@color/app_red_color"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-2dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/stopNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingTop="2dp"
        android:textSize="@dimen/text_size_14sp"
        android:paddingRight="@dimen/small_margin"
        android:textColor="@color/flightBlackColor"
        android:text="ISBT Kashmiri Gate Delhi"/>

    <ImageView
        android:id="@+id/checkImg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/check_white"/>
</LinearLayout>