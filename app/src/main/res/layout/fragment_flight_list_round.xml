<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/date_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/app_blue_color"
        android:padding="@dimen/very_small_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/backArrowImg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/back_arrow_size"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/very_small_margin"
            android:src="@drawable/back_arrow" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fromCityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp"
                />

            <TextView
                android:id="@+id/FromdateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Oct 2017"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/roundImg"
                android:layout_width="@dimen/airSearchCalenderSize"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/both_side_arrow"
                />

            <TextView
                android:id="@+id/travellerInfoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 TRAVELLER"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ToCityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEL"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_18sp"
                />

            <TextView
                android:id="@+id/ToDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 Oct 2017"
                android:textColor="@color/color_white"
                android:textSize="@dimen/small_text_size"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/flightFilter"
            android:layout_width="@dimen/airSearchCalenderSize"
            android:layout_height="@dimen/airSearchCalenderSize"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/very_small_margin"
            android:src="@drawable/filter_white_icon"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_lin"
        android:layout_marginTop="@dimen/card_margin_2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/splitViewTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue_color"
            android:gravity="center"
            android:text="Split View"
            android:textColor="@color/color_white"
            android:padding="@dimen/small_margin"/>

        <TextView
            android:id="@+id/roundViewTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/app_blue_color"
            android:gravity="center"
            android:text="Round Fare"
            android:textColor="@color/color_white"
            android:padding="@dimen/small_margin"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llnear"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewLinear"
        android:layout_above="@+id/view"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@color/lightBlueColor"
                android:padding="@dimen/very_small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/outBoundCityCodeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Del - Bom"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/outBoundDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Oct'17"
                    android:layout_gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/small_text_size"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_red_color"
                android:drawableRight="@drawable/down_arrow"
                android:textSize="@dimen/simple_content_text_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black_hint"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewOutBound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_lin" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/color_light_black"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@color/lightBlueColor"
                android:padding="@dimen/very_small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inBoundCityCodeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bom - Del"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_size_18sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/inBoundDateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Oct'17"
                    android:layout_gravity="center"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/small_text_size"
                    android:gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:gravity="right|center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_red_color"
                android:drawableRight="@drawable/down_arrow"
                android:textSize="@dimen/simple_content_text_size"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_black_hint"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewInBound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_lin" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:visibility="visible"
        android:background="@color/app_blue_color"
        android:layout_above="@+id/linBottom">

    </View>

    <LinearLayout
        android:id="@+id/linBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:padding="@dimen/very_small_margin"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selectedCityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="@dimen/small_text_size"
                android:text="DEL to BOM"/>
            <TextView
                android:id="@+id/selectedAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/app_blue_color"
                android:text="0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/plus_flight"
                android:text="@string/About_us"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roundSelectedCityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="@dimen/small_text_size"
                android:text="BOM to DEL"/>
            <TextView
                android:id="@+id/roundSelectedAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/app_blue_color"
                android:text="0"/>

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/app_blue_color"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalAmountTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:text="0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bookNowTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/small_margin"
                android:background="@color/app_red_color"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/small_margin"
                android:textColor="@color/color_white"
                android:text="BOOK"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_below="@+id/viewLinear"/>

</RelativeLayout>


