<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transaction is processing..."
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:padding="@dimen/small_margin"
        android:textColor="@color/color_white"
        android:background="@color/app_blue_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">

        <TextView
            android:id="@+id/transactionTv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transaction 1"
            android:textColor="@color/dark_blue_color" />

        <TextView
            android:id="@+id/amountTv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Amount : 5000"
            android:textColor="@color/dark_blue_color" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:max="100"
            android:progress="10"
            android:scaleY="3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/progressBar11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:max="100"
            android:progress="100"
            android:visibility="gone"
            android:scaleY="3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/large_margin">

        <TextView
            android:id="@+id/transactionTv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transaction 2"
            android:textColor="@color/dark_blue_color"/>

        <TextView
            android:id="@+id/amountTv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Amount : 5000"
            android:textColor="@color/dark_blue_color"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">
        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:max="100"
            android:progress="10"
            android:scaleY="3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/progressBar22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:max="100"
            android:progress="100"
            android:visibility="gone"
            android:scaleY="3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginTop="@dimen/large_margin">

        <TextView
            android:id="@+id/transactionTv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Transaction 3"
            android:textColor="@color/dark_blue_color"/>

        <TextView
            android:id="@+id/amountTv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Amount : 5000"
            android:textColor="@color/dark_blue_color"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin">
        <ProgressBar
            android:id="@+id/progressBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:max="100"
            android:progress="10"
            android:scaleY="3"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <ProgressBar
            android:id="@+id/progressBar33"
