<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.creditcard.CreditCardFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_blue_color"
        android:padding="@dimen/small_margin">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/back_arrow_size"
            android:layout_height="@dimen/back_arrow_size"
            app:srcCompat="@drawable/arrow_left_back"
            android:padding="@dimen/very_small_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Raise a Query"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30dp"
            android:text="Product Type"
            android:textColor="@color/app_blue_color"
            android:textSize="@dimen/small_text_size"
            android:layout_marginLeft="@dimen/margin_7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_7dp"
            android:paddingBottom="@dimen/margin_7dp"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:layout_marginRight="@dimen/small_margin">

            <Spinner
                android:id="@+id/productTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="Card Type"
                android:maxLines="1"
                android:textSize="@dimen/simple_content_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/down_arrow"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/app_blue_color"
            android:layout_marginLeft="@dimen/margin_7dp"
            android:layout_marginRight="@dimen/margin_7dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
            android:layout_marginRight="@dimen/add_beneficiary_side_margin"
            android:layout_marginTop="@dimen/medium_margin">

            <EditText
                android:id="@+id/number_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No"
                android:text=""
                android:maxLength="10"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black_text_color" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
            android:layout_marginRight="@dimen/add_beneficiary_side_margin"
            android:layout_marginTop="@dimen/medium_margin">

            <EditText
                android:id="@+id/email_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:text=""
                android:maxLength="@integer/emailMaxLength"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black_text_color"
                android:longClickable="false"
                tools:ignore="Autofill"
                style="@style/CustomEdittextTheme"
                />

        </com.google.android.material.textfield.TextInputLayout>
<!--        android:textIsSelectable="false"
                android:importantForAutofill="no"-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/issueTypeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
            android:layout_marginRight="@dimen/add_beneficiary_side_margin"
            android:layout_marginTop="@dimen/medium_margin">

            <EditText
                android:id="@+id/issue_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Issue Type"
                android:text=""
                android:maxLength="@integer/remarks_maxLength"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black_text_color" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/chooseFileLin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@drawable/registration_edittext_back"
            >

            <TextView
                android:id="@+id/panCardCopy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:padding="@dimen/medium_margin"
                android:hint="Choose file"
                />

            <ImageView
                android:id="@+id/imageFile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/choose_file"/>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
            android:layout_marginRight="@dimen/add_beneficiary_side_margin"
            android:layout_marginTop="@dimen/medium_margin">

            <EditText
                android:id="@+id/remarks_edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Remarks"
                android:inputType="text"
                android:maxLength="@integer/query_maxLength"
                android:text=""
                android:minLines="2"
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/text_size_18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/submit_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/title_text_size"
            android:padding="@dimen/margin_7dp"
            android:background="@color/orange_color"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:text="Submit"/>


    </LinearLayout>

</LinearLayout>