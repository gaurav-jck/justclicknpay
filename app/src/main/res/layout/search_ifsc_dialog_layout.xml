<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup"
    android:background="@color/cardMobileBackground"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_blue_color"
        android:padding="@dimen/small_margin"
        android:layout_marginLeft="@dimen/add_beneficiary_side_margin"
        android:textSize="@dimen/text_size_16sp"
        android:text="Bank Details"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_blue_color"
        />

    <TextView
        android:id="@+id/confirm_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Verification Type"
        android:textColor="@color/dark_blue_color"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/margin_30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:gravity="center"
        android:background="@drawable/money_receiver_border_rect_corner"
        android:layout_marginTop="@dimen/medium_margin">

        <TextView
            android:id="@+id/byIFSCTv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="By IFSC"
            android:background="@color/app_blue_color"
            android:textColor="@color/color_white" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_blue_color"/>


        <TextView
            android:id="@+id/byBranchTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/small_margin"
            android:text="By Branch"
            android:textColor="@color/app_blue_color" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_blue_color"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/byBranchLin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/app_blue_color"
            android:text="Bank"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            >
            <Spinner
                android:id="@+id/spinnerBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="visible"
                >
            </Spinner>

            <TextView
                android:id="@+id/bankNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textSize="@dimen/simple_content_text_size"
                android:text=""
                android:textColor="@color/dark_blue_color"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@+id/linear_jio_spinner"
            android:background="@color/app_blue_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/app_blue_color"
            android:text="State"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            >
            <Spinner
                android:id="@+id/spinnerStateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="visible"
                >
            </Spinner>

            <TextView
                android:id="@+id/stateNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textSize="@dimen/simple_content_text_size"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/dark_blue_color"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@+id/linear_jio_spinner"
            android:background="@color/app_blue_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/app_blue_color"
            android:text="City"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            >
            <Spinner
                android:id="@+id/spinnerCityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="visible"
                >
            </Spinner>

            <TextView
                android:id="@+id/cityNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textSize="@dimen/simple_content_text_size"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/dark_blue_color"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@+id/linear_jio_spinner"
            android:background="@color/app_blue_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:textColor="@color/app_blue_color"
            android:text="Branch"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            >
            <Spinner
                android:id="@+id/spinnerBranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:visibility="visible"
                >
            </Spinner>

            <TextView
                android:id="@+id/branchNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textSize="@dimen/simple_content_text_size"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/dark_blue_color"
                />
        </RelativeLayout>
        <View
            android:id="@+id/jio_spinner_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginRight="@dimen/medium_margin"
            android:layout_below="@+id/linear_jio_spinner"
            android:background="@color/app_blue_color"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ifscCodeInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/medium_margin"
        android:layout_marginRight="@dimen/medium_margin"
        android:layout_marginTop="@dimen/very_large_margin">

        <EditText
            android:id="@+id/ifscCodeEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IFSC code"
            android:text=""
            android:inputType="text"
            android:singleLine="true"
            android:digits="@string/alphaNumeric_editText_digits"
            android:maxLength="11"
            android:textSize="@dimen/money_transfer_input_text_size"
            android:textColor="@color/app_blue_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/large_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:text="Search"
        android:layout_gravity="right"
        android:background="@color/app_blue_color"
        android:textColor="@color/color_white" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:padding="@dimen/medium_margin"
            android:layout_marginRight="@dimen/very_large_margin"
            android:text="CANCEL"
            android:textColor="@color/dark_blue_color" />

        <TextView
            android:id="@+id/ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:padding="@dimen/medium_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:text="OK"
            android:textColor="@color/dark_blue_color" />

    </LinearLayout>



</LinearLayout>
</ScrollView>